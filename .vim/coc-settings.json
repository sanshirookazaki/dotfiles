{
    "languageserver": {
        "golang": {
            "command": "gopls",
            "rootPatterns": ["go.mod"],
            "filetypes": ["go"]
        },
        "golangci-lint-languageserver": {
            "command": "golangci-lint-langserver",
            "filetypes": ["go"],
            "initializationOptions": {
                "command": ["golangci-lint", "run", "--enable-all", "--disable", "lll", "--out-format", "json"]
            }
        }
    },
    "coc.preferences.formatOnSaveFiletypes": [
        "css",
        "typescript",
        "javascript",
        "markdown",
        "json"
    ]
}
